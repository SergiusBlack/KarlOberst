@model KarlOberstV2.Models.Usuario

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login fallido, comprueba los datos introducidos.");
    <div class="col-md-10">
        <fieldset>
            <legend>Login</legend>
            <div >
                @Html.LabelFor(u => u.NombreUsuario)
            </div>

            <div>
                @Html.TextBoxFor(u => u.NombreUsuario)
                @Html.ValidationMessageFor(u=> u.NombreUsuario)
            </div>
            <div>
                @Html.LabelFor(u => u.Password)
            </div>

            <div>
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
            </div>

            <div>
                @Html.CheckBoxFor(u => u.Recordar)
                @Html.LabelFor(u => u.Recordar)
            </div>
            <input type="submit" value="Log In" />
        </fieldset>
    </div>
}