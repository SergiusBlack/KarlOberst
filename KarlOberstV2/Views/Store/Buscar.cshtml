@model KarlOberstV2.Models.Genero

@{
    ViewBag.Title = Model.Nombre;
}

<h2>@Model.Nombre</h2>
<section class="row">
    @foreach (var producto in Model.Productos)
    {
        <article class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <img src="@producto.ImgProducto" alt="@producto.Nombre" />
                <div class="caption">
                    <h3>@producto.Nombre</h3>
                    <p>@producto.Descripcion</p>
                    <a href="#" class="btn btn-primary btn-block" role="button">Añadir al carrito</a>
                </div>
            </div>
        </article>
    }


</section>
