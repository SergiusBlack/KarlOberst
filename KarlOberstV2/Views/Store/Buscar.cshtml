@model KarlOberstV2.Models.Genero

@{
    ViewBag.Title = Model.Nombre;
}

<h2>@Model.Nombre</h2>

    <section class="row">
        @foreach (var producto in Model.Productos)
        {
            <form>
                
                <article class="col-xs-6 col-md-3">
                    <div class="thumbnail">
                        <img src="@producto.ImgProducto" alt="@producto.Nombre" />
                        <div class="caption">
                            <h3>@producto.Nombre</h3>
                            <p>@producto.Descripcion</p>
                            <hr />
                          
                            <label>
                                <p>Cantidad: </p>
                                <input type="number" class="cantidad" id="cantidad" min="1"  value="1"/>
                            </label>
                            <button class="add-cart" value="@producto.IdProducto">Añadir al carrito</button>
                            <p class="precio">@producto.Precio.ToString()€</p>
                        </div>
                    </div>
                </article>
                
            </form>
        }


</section>
