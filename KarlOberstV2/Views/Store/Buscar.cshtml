@model KarlOberstV2.Models.Genero

@{
    ViewBag.Title = Model.Nombre;
}

<h2>@Model.Nombre</h2>

    <section class="row">
        @foreach (var producto in Model.Productos)
        {
            <form>
                
                <article class="col-xs-6 col-md-3">
                    <div class="thumbnail">
                        <img src="@producto.ImgProducto" alt="@producto.Nombre" />
                        <div class="caption">
                            <h3>@producto.Nombre</h3>
                            <p>@producto.Descripcion</p>
                            <button class="btn btn-primary btn-block add-cart" value="@producto.IdProducto" >Añadir al carrito</button>
                            @*<a href="@Url.Action("Add","Cart",new {idProd = producto.IdProducto })" class="btn btn-primary btn-block add-cart"  role="button">Añadir al carrito</a>*@
                            <p class="alert alert-warning text-center">@producto.Precio.ToString()€</p>
                        </div>
                    </div>
                </article>
                
            </form>
        }


</section>
